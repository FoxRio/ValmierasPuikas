<VerisWindow>:
    name: "veris"

    GridLayout:
        cols:1

        Label:
            text: "Tas ir mežs, kas atrodas pie vecā dzelzceļa tilta. Šeit 1934. gada pavasarī zemnieku nemieros kritušo kapa vietā Kaugurvērī ierīkoja piemiņas vietu, bet 1939. gadā tur atklāja piemiņas plāksni."
            text_size: self.size
            halign: "center"
            valign: "middle"
        Button:
            size_hint_y: 0.2
            text: "Atskaņot"
            on_release:
                root.play_music(".mp3")

        Button:
            size_hint_y: 0.1
            text: "Atpakaļ"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "up"


