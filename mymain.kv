<Button>:
    #background_normal: ''
    background_color: 0/255, 0/255, 0/255, 1



<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        Label:
            text: "Valmieras puikas"

            font_size: 80

        Label:

            text: "Pāvils Rozītis"
            font_size: 40


        Button:
            text: "Turpināt"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "down"


<SecondWindow>:
    name: "second"

    GridLayout:
        cols:1

        Label:
            text: "Svarīgākās vietas romānā"
            font_size: 40
        Button:
            text: "Piemineklis"
            font_size: 55
            color:(4/255, 118/255,110,1)
            background_down: "piemineklis.jfif"
            on_release:
                app.root.current = "piemineklis"
                root.manager.transition.direction = "down"


        GridLayout:
            cols:2

            Button:
                text: "Kauguru vēris"
                background_down: "veris.jfif"
                on_release:
                    app.root.current = "veris"
                    root.manager.transition.direction = "down"

            Button:
                text: "Karātavu kalniņš"
                background_down: "karatavas.jfif"
                on_release:
                    app.root.current = "karatavas"
                    root.manager.transition.direction = "down"
            Button:
                text: "Valterkalniņš"
                background_down: "valterkalns.jfif"
                on_release:
                    app.root.current = "valters"
                    root.manager.transition.direction = "down"
            Button:
                text: "Dzirnaviņu ezera slidotava"
                background_down: "ezerins.jfif"
                on_release:
                    app.root.current = "ezers"
                    root.manager.transition.direction = "down"
            Button:
                text: "Sv. Sīmaņa baznīca"
                background_down: "simana.jfif"
                on_release:
                    app.root.current = "simana"
                    root.manager.transition.direction = "down"
            Button:
                text: "Stāvie krasti"
                background_down: "stavie.jfif"
                on_release:
                    app.root.current = "stavie"
                    root.manager.transition.direction = "down"
            Button:
                text: "Skolotāju seminārs"
                background_down: "seminars.jfif"
                on_release:
                    app.root.current = "seminars"
                    root.manager.transition.direction = "down"
            Button:
                text: "Valmiermuiža"
                background_down: "Valmiermuiza.jfif"
                on_release:
                    app.root.current = "valmiermuiza"
                    root.manager.transition.direction = "down"
            Button:
                text: "Zilaiskalns"
                background_down: "zilaiskalns.jfif"
                on_release:
                    app.root.current = "zilaiskalns"
                    root.manager.transition.direction = "down"
            Button:
                text: "Pārgauja"
                background_down: "pargauja.jfif"
                on_release:
                    app.root.current = "pargauja"
                    root.manager.transition.direction = "down"
            Button:
                text: "Stacija"
                background_down: "stacija.jfif"
                on_release:
                    app.root.current = "stacija"
                    root.manager.transition.direction = "down"
            Button:
                text: "Kazu krāces"
                background_down: "kraces.jfif"
                on_release:
                    app.root.current = "kraces"
                    root.manager.transition.direction = "down"
        Button:
            text: "Atpakaļ"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "up"


<VerisWindow>:
    name: "veris"

    GridLayout:
        cols:1

        Label:
            text: "Tas ir mežs, kas atrodas pie vecā dzelzceļa tilta. Šeit 1934. gada pavasarī zemnieku nemieros kritušo kapa vietā Kaugurvērī ierīkoja piemiņas vietu, bet 1939. gadā tur atklāja piemiņas plāksni."
        Button:
            text: "Atskaņot"
            on_release:
                root.play_music("veris.mp3")

        Button:
            text: "Atpakaļ"
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "up"


